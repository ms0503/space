root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_size = 4
indent_style = space
max_line_length = off
tab_width = 4
trim_trailing_whitespace = true

[*.{js,ts}]
block_comment_end = */
block_comment_start = /*
curly_bracket_next_line = false
line_comment = //
quote_type = single
spaces_around_brackets = none
spaces_around_operators = true

[*.md]
trim_trailing_whitespace = false

